  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      margin: 0;
      height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .header-bar {
      background-color: #dd822d;
      color: white;
      padding: 15px 0;
      text-align: center;
    }

    .container {
      max-width: 1200px;
      margin: 20px auto;
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      padding: 20px;
    }

    .table-container {
      width: 100%;
      max-width: 1000px;
      background-color: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      margin-top: 20px;
    }

    .table th,
    .table td {
      text-align: center;
      
    }

    .table th {
      background-color: #f1f1f1;
    }

    .label-bold {
      font-weight: bold;
    }

    .back-btn {
      margin-top: 5px;
      display: block;
      text-align: center;
    }

    .form-inline {
      width: 100%;
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }

    .form-control {
      margin-right: 10px;
    }
  </style>

</head>

<body>
